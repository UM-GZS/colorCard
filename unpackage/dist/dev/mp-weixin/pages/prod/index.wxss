page {
  background: #FAFAFA;
}
.swiper-box {
  width: 100%;
  height: 350rpx;
}
.swiper-box .swiper-list {
  width: 100%;
  height: 100%;
}
.swiper-box .swiper-list .swiper-item {
  width: 100%;
  height: 100%;
}
.nav-list {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  height: 100rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #FFFFFF;
  z-index: 99;
}
.nav-list .nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav-list .nav-item .nav-name {
  font-size: 32rpx;
  color: #646566;
}
.nav-list .nav-item .nav-line {
  margin-top: 20rpx;
  width: 70%;
  height: 7rpx;
  border-radius: 15rpx;
}
.nav-list .nav-item.active .nav-name {
  color: #3B69DC;
}
.nav-list .nav-item.active .nav-line {
  background: #3B69DC;
}
.card-box {
  margin: 40rpx 20rpx 20rpx;
  padding: 0 50rpx 40rpx;
  background: #FFFFFF;
  border-radius: 15rpx;
  box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.2);
}
.card-box .card-head {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #3B69DC;
}
.card-box .card-content {
  width: 100%;
  line-height: 45rpx;
  font-size: 30rpx;
  color: #3B69DC;
}
.prod-list {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.prod-list .prod-item {
  margin: 20rpx 0;
  width: 340rpx;
  height: 440rpx;
  background: #F2F2F2;
}
.prod-list .prod-item image {
  width: 100%;
  height: 340rpx;
}
.prod-list .prod-item .prod-name {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999999;
}
.about-box {
  margin: 40rpx 0 0;
  width: 100%;
  height: 400rpx;
}
.about-box image {
  width: 100%;
  height: 100%;
}
.page-more {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #888888;
}

