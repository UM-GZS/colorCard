page {
  background: #FAFAFA;
}
.nav-list {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  height: 100rpx;
  background: #FFFFFF;
  z-index: 99;
}
.nav-list .nav-scroll {
  width: 100%;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  white-space: nowrap;
}
.nav-list .nav-scroll .nav-item {
  margin: 0 40rpx;
  display: inline-block;
}
.nav-list .nav-scroll .nav-item .nav-name {
  font-size: 32rpx;
  color: #646566;
}
.nav-list .nav-scroll .nav-item .nav-line {
  margin-top: 20rpx;
  width: 100%;
  height: 7rpx;
  border-radius: 15rpx;
}
.nav-list .nav-scroll .nav-item.active .nav-name {
  color: #3B69DC;
}
.nav-list .nav-scroll .nav-item.active .nav-line {
  background: #3B69DC;
}
.card-list {
  padding: 10rpx 15rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.card-list .card-item {
  margin: 15rpx 20rpx;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #F2F2F2;
  border-radius: 15rpx;
  box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.2);
}
.card-list .card-item .card-image {
  width: 100%;
  height: 140rpx;
  border-radius: 15rpx;
}
.card-list .card-item .card-name {
  font-size: 30rpx;
  color: #888888;
}
::-webkit-scrollbar {
  display: none;
  width: 0 !important;
  height: 0 !important;
  -webkit-appearance: none;
  background: transparent;
  color: transparent;
}

