page {
  background: #FAFAFA;
}
.nav-list {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  height: 100rpx;
  background: #FFFFFF;
  z-index: 99;
}
.nav-list .nav-scroll {
  width: 100%;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  white-space: nowrap;
}
.nav-list .nav-scroll .nav-item {
  margin: 0 40rpx;
  display: inline-block;
}
.nav-list .nav-scroll .nav-item .nav-name {
  font-size: 32rpx;
  color: #646566;
}
.nav-list .nav-scroll .nav-item .nav-line {
  margin-top: 20rpx;
  width: 100%;
  height: 7rpx;
  border-radius: 15rpx;
}
.nav-list .nav-scroll .nav-item.active .nav-name {
  color: #3B69DC;
}
.nav-list .nav-scroll .nav-item.active .nav-line {
  background: #3B69DC;
}
.color-card {
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 15rpx;
  background: #FFFFFF;
  box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.2);
}
.color-card .card-head {
  font-size: 32rpx;
  font-weight: 600;
  color: #276D86;
  padding: 10rpx 20rpx;
}
.color-card .card-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.color-card .card-list .card-item {
  margin: 15rpx 10rpx;
  position: relative;
  width: 22%;
  height: 150rpx;
  border-radius: 20rpx;
}
.color-card .card-list .card-item image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.color-card .card-list .card-item .card-tag {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 5rpx 15rpx;
  font-size: 20rpx;
  border-radius: 10rpx;
  background: #FFFFFF;
  box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.2);
}
.page-more {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #888888;
}
.color-list {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.color-list .color-item {
  margin: 0 0 20rpx;
  width: 340rpx;
  border-radius: 20rpx;
}
.color-list .color-item image {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
  box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.2);
}
.color-list .color-item .color-name {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  color: #888888;
}

