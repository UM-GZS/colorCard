page {
  background: #FAFAFA;
}
.swiper-box {
  width: 100%;
  height: 350rpx;
}
.swiper-box .swiper-list {
  width: 100%;
  height: 100%;
}
.swiper-box .swiper-list .swiper-item {
  width: 100%;
  height: 100%;
}
.nav-list {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  height: 100rpx;
  background: #FFFFFF;
  z-index: 99;
}
.nav-list .nav-scroll {
  width: 100%;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  white-space: nowrap;
}
.nav-list .nav-scroll .nav-item {
  margin: 0 40rpx;
  display: inline-block;
}
.nav-list .nav-scroll .nav-item .nav-name {
  font-size: 32rpx;
  color: #646566;
}
.nav-list .nav-scroll .nav-item .nav-line {
  margin-top: 20rpx;
  width: 100%;
  height: 7rpx;
  border-radius: 15rpx;
}
.nav-list .nav-scroll .nav-item.active .nav-name {
  color: #3B69DC;
}
.nav-list .nav-scroll .nav-item.active .nav-line {
  background: #3B69DC;
}
.content {
  margin: 20rpx 0 0;
  padding: 20rpx 20rpx 30rpx;
  background: #FFFFFF;
}
.content .content-input {
  padding: 0 20rpx;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #F7F7F7;
}
.content .content-input .input-left {
  font-size: 32rpx;
  color: #888888;
}
.content .content-input .input-right {
  display: flex;
  align-items: center;
  font-size: 32rpx;
}
.content .content-input .input-right input {
  text-align: center;
  width: 180rpx;
}
.content .content-input .input-right text {
  color: #888888;
  display: inline-block;
  margin-left: 10rpx;
}
.content .content-button {
  margin: 50rpx auto;
  width: 350rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  background: #3B69DC;
  color: #ffffff;
  border-radius: 10rpx;
}
.content .content-result {
  margin: 0 20rpx;
  height: 350rpx;
  background: #EBF0FC;
  border-radius: 10rpx;
}
.content .content-result .result-title {
  padding: 0 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #3B69DC;
  border-bottom: 1px solid #DCDCDC;
}
.content .content-result .result-item {
  padding: 30rpx 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .content-result .result-item text {
  flex: 1;
  text-align: center;
}
.content .content-result .result-item .result-name, .content .content-result .result-item .result-unit {
  font-size: 30rpx;
  color: #888888;
}
.content .content-result .result-item .result-num {
  font-size: 30rpx;
  color: #3B69DC;
}
.content .content-info {
  margin: 20rpx 20rpx 0;
  height: 460rpx;
  background: #EBF0FC;
  border-radius: 10rpx;
}
.content .content-info .info-title {
  padding: 0 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #888888;
  border-bottom: 1px solid #DCDCDC;
}
.content .content-info .info-item {
  padding: 30rpx 20rpx 0;
  font-size: 30rpx;
  color: #888888;
}

