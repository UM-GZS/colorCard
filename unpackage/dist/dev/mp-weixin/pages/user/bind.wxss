page {
  background: #FAFAFA;
}
.head-box {
  position: relative;
  width: 100%;
  height: 300rpx;
  background: #3B69DC;
}
.head-box .head-card {
  position: relative;
  top: 80rpx;
  margin: 0 40rpx;
  padding: 60rpx;
  height: 700rpx;
  background: #FFFFFF;
  border-radius: 15rpx;
  box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.2);
}
.head-box .head-card .card-title {
  font-size: 40rpx;
}
.head-box .head-card .card-info {
  margin: 10rpx 0 80rpx;
  font-size: 28rpx;
  color: #888888;
}
.head-box .head-card .card-input {
  padding: 25rpx 10rpx;
  font-size: 34rpx;
  border-bottom: 1px solid #E6E6E6;
}
.head-box .head-card .card-button {
  margin: 100rpx auto 0;
  width: 350rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 36rpx;
  color: #ffffff;
  background: #3B69DC;
  border-radius: 10rpx;
}

